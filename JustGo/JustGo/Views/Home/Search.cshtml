@{
    Layout = "_Layout2";
}

@{
    ViewData["Title"] = "Select";
}

@section Style{
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


<style>
    .searchBar {
        border: 1px solid black;
        margin: 10px;
        height: 50px;
    }

    .searchResult {
        border: 1px solid black;
        margin: 10px;
        height: auto;
    }

    .searchBlog {
        border: 1px solid black;
        margin: 10px;
        height: 100px;
    }
    p{
        color : black;
    }
    body{
        background-color:grey;
    }
    .minHight {
        height: 300px;
    }
</style>
}

<div class="minHight">    
</div>

<div id="app" class="container minHight">
    <div class="searchBar">
    </div>        
    <button @@click="clicked">click here</button>    
    <div class="searchResult">
        <div class="searchBlog" v-for="item in search.results">    
            <h1>{{item.scheduleId}}</>
        </div>        
    </div>
</div>


@section Scripts {
<script src="https://unpkg.com/vue@next"></script>
<script src="https://unpkg.com/axios/dist/axios.js"></script>
<script>
    const { reactive,ref } = Vue;
    const App = {
        setup() {

            const search = reactive({results: []})
            const filter = ref([])
            function clicked(){
                axios.post("@Url.Action("testSearch","Search")").then(res => search.results = res.data )
            }
                                   
            return {
                search,   
                clicked
            }
        },
    }
    Vue.createApp(App).mount("#app")
</script>
}