    <script>
        new Vue({
            el: "#app",
            data: {
                showSchedule: [],
                showBlog: [],
                userKeepBlog: [],
                drag: true,
                selectcountry: [],
                country: ['基隆市', '新北市', '臺北市', '桃園市', '新竹縣', '新竹市', '苗栗縣', '臺中市', '彰化縣',
                    '南投縣', '雲林縣', '嘉義縣', '嘉義市', '臺南市', '高雄市', '屏東縣', '宜蘭縣', '花蓮縣',
                    '臺東縣', '澎湖縣', '連江縣', '金門縣'],
                selectviewclass: [],
                viewclass: ['文化', '生態', '古蹟', '廟宇', '藝術', '小吃特產', '國家公園', '國家風景區', '休閒農業', '溫泉', '自然風景', '遊憩', '體育健身', '其他'],


            },
            computed: {
                schedule() {
                    return this.showSchedule;
                },
                blog() {
                    return this.showBlog;
                },
                keepBlog() {
                    return this.userKeepBlog;
                },
                nextSchedule() {
                    return this.showSchedule.filter(e => new Date(e.endDate) > new Date());
                },
                exSchedule() {
                    return this.showSchedule.filter(e => new Date(e.endDate) < new Date());
                },

            },
            methods: {
                addcountry(index) {
                    this.selectcountry.push(this.country[index])
                    this.country.splice(index, 1);
                },
                addviewclass(index) {
                    this.selectviewclass.push(this.viewclass[index])
                    this.viewclass.splice(index, 1);
                },
                removecountry(index) {
                    this.country.push(this.selectcountry[index])
                    this.selectcountry.splice(index, 1);
                },
                removeviewclass(index) {
                    this.viewclass.push(this.selectviewclass[index])
                    this.selectviewclass.splice(index, 1);
                },
                editSchedule(scheduleId) {
                    window.location.href = '@Url.Action("itinerary","Home")?' + scheduleId
                },
                deleteSchedule(scheduleId) {
                    axios.post("@Url.Action("deleteSchedule","Schedule")", { ScheduleId: scheduleId })
                        .then(res => { this.showSchedule.splice(this.showSchedule.findIndex(e => e.scheduleId == res.data), 1) })
                        .catch(err => console.log("err"))
                },
                createBlog(scheduleId) {
                    window.location.href = '@Url.Action("EditBlog","Home")#create?' + scheduleId
                },
                editBlog(blogId) {
                    window.location.href = '@Url.Action("EditBlog","Home")#edit?' + blogId
                },
                deleteBlog(blogId) {
                    axios.post("@Url.Action("deleteBlog","blog")", { blogId: blogId })
                        .then(res => { this.showBlog.splice(this.showBlog.findIndex(e => e.blogId == blogId), 1) })
                        .catch(err => console.log("err"))
                },
                deleteKeep(blogId) {
                    axios.post("@Url.Action("userKeepBlog","blog")", { id: blogId })
                        .then(res => { this.userKeepBlog.splice(this.userKeepBlog.findIndex(e => e.blogId == blogId), 1) })
                        .catch(err => console.log("err"))
                },
                checkBlog(blogId) {
                    window.location.href = '@Url.Action("Blog","Home")?' + blogId
                },
                checkSchedule(scheduleId) {
                    window.location.href = '@Url.Action("check","Home")?' + scheduleId
                },
                formateTime() {
                    for (let i = 0; i < this.showSchedule.length; i++) {
                        let day = new Date(this.showSchedule[i].startDate)
                        let year = day.getFullYear();
                        let month = day.getMonth() + 1;
                        let date = day.getDate();
                        this.showSchedule[i].startDate = year + "/" + month + "/" + date

                        day = new Date(this.showSchedule[i].endDate)
                        year = day.getFullYear();
                        month = day.getMonth() + 1;
                        date = day.getDate();
                        this.showSchedule[i].endDate = year + "/" + month + "/" + date
                        console.log("for")
                    }
                },
                formateTime2() {
                    for (let i = 0; i < this.showBlog.length; i++) {
                        let day = new Date(this.showBlog[i].startDate)
                        let year = day.getFullYear();
                        let month = day.getMonth() + 1;
                        let date = day.getDate();
                        this.showBlog[i].startDate = year + "/" + month + "/" + date

                        day = new Date(this.showBlog[i].endDate)
                        year = day.getFullYear();
                        month = day.getMonth() + 1;
                        date = day.getDate();
                        this.showBlog[i].endDate = year + "/" + month + "/" + date
                        console.log("for")
                    }
                },
                formateTime3() {
                    for (let i = 0; i < this.userKeepBlog.length; i++) {
                        let day = new Date(this.userKeepBlog[i].startDate)
                        let year = day.getFullYear();
                        let month = day.getMonth() + 1;
                        let date = day.getDate();
                        this.userKeepBlog[i].startDate = year + "/" + month + "/" + date

                        day = new Date(this.userKeepBlog[i].endDate)
                        year = day.getFullYear();
                        month = day.getMonth() + 1;
                        date = day.getDate();
                        this.userKeepBlog[i].endDate = year + "/" + month + "/" + date
                        console.log("for")
                    }
                },
                getImages(loadimagesName) {
                    return "@Url.Content("~/blogImages")/" + loadimagesName
                },
            },
            mounted() {
                axios.get("@Url.Action("selectUserSchedule","Schedule")")
