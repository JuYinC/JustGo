@{
    Layout = "_Layout";
    }
    @{
    ViewData["Title"] = "遊記 -";
    }
    @section Style{
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/showblog.css" asp-append-version="true" />
    <!-- Bootstrap CSS is already loaded in _Layout.cshtml -->

    <link rel='stylesheet' href='https://unpkg.com/viewerjs/dist/viewer.css'>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />



    <style>


    </style>


    }



    @section Scripts{
    <script src="~/js/site.js"></script>

    <script src="https://unpkg.com/vue@3.3.4/dist/vue.global.js" onerror="console.error('Failed to load Vue from unpkg'); this.onerror=null; this.src='https://cdn.jsdelivr.net/npm/vue@3.3.4/dist/vue.global.js';"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src='https://unpkg.com/viewerjs/dist/viewer.js'
            onerror="console.error('Failed to load Viewer.js');"></script>
    <script src='https://unpkg.com/v-viewer/dist/v-viewer.js'
            onerror="console.error('Failed to load v-viewer');"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js'
            onerror="console.error('Failed to load Moment.js'); window.moment = { format: () => 'N/A' };"></script>
    <script src="https://unpkg.com/axios@1.5.0/dist/axios.min.js"
            onerror="console.error('Failed to load Axios'); alert('無法載入必要資源，請檢查網路連線並重新整理頁面');"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            onerror="console.error('Failed to load Bootstrap');"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"
            onerror="console.error('Failed to load DateRangePicker');"></script>


    <script>

        // Check if Vue is loaded
        if (typeof Vue === 'undefined') {
            console.error('Vue is not loaded! Check your internet connection or CDN availability.');
            alert('Vue.js failed to load. Please refresh the page or check your internet connection.');
        }

        $("body").attr('data-bs-spy', 'scroll')
        $("body").attr('data-bs-target', '#list-example')
        $("body").attr('data-bs-offset', '0')
        $("body").attr('tabindex', '0')

        // Initialize v-viewer for Vue 3
        if (typeof VueViewer !== 'undefined' && VueViewer.default) {
            // v-viewer will be registered in the app
        }

        $(function() {
            $('input[name="daterange"]').daterangepicker({
                opens: 'left'
            }, function(start, end, label) {
                // Date range selected
            }).on("hide.daterangepicker", function(ev) {
                this.dispatchEvent(new Event('input'))
            });
        });

        const { reactive, ref, computed, onMounted } = Vue;

        const BlogApp = {
            setup() {
                // Reactive data
                const blogId = ref(0);
                const UserName = ref("Alley");
                const UserImage = ref("2208121714164777.jpg");
                const CoverImageName = ref({ name: "coverimage.jpg" });
                const Title = ref('三天兩夜台東之旅');
                const Describe = ref('美好旅程的回憶從JustGO開始');
                const StartDate = ref(null);
                const EndDate = ref(null);
                const bool = ref(false);
                const Like = ref(0);
                const daterange = ref(null);
                const Details = ref([]);
                const TagList = ref([]);
                const tagBlog = ref([]);
                const isLoading = ref(true);

                // Props-like constants
                const count = 5;
                const score = 1;
                const color = '#FFC100';
                const myscore = ref(score);
                const mytempscore = ref(score);

                // Computed properties
                const copyDate = computed(() => daterange.value);
                const comTagBlog = computed(() =>
                    tagBlog.value.filter(e => e.blogId != blogId.value)
                );

                // Methods
                const TAG = (tag) => {
                    switch (tag) {
                        case 1:
                            return '文化';
                    case 2:
                        return '生態'                      
                        break;
                    case 3:
                        return '古蹟'
                        break;                       
                    case 4:
                        return '廟宇'
                        break;
                    case 5:
                        return'藝術'                      
                        break;
                    case 6:
                        return '小吃特產'
                        break;                     
                    case 7:
                        return '國家公園'
                        break;
                    case 8:
                        return '國家風景區'                      
                        break;
                    case 9:
                        return '休閒農業'
                        break;
                    case 10:
                        return '溫泉'
                        break;
                    case 11:
                        return '自然風景'                      
                        break;
                    case 12:
                        return'遊憩'
                        break;
                    case 13:
                        return '體育健身'
                        break;
                    default:
                        return '其他'                      
                        break;                   
                    }
                };

                const getImages = (loadimagesName) => {
                    return "@Url.Content("~/blogImages")/" + loadimagesName;
                };

                const userImageSrc = (imageName) => {
                    return "@Url.Content("~/UserImages")/" + imageName;
                };

                const getdate = (date) => {
                    return moment(date).format('YYYY/MM/DD');
                };

                const gettime = (time) => {
                    return moment(time).format('A HH');
                };

                const gethref = (dayIndex, viewIndex) => {
                    return "#list-item-" + dayIndex + "-" + viewIndex;
                };

                const getanchor = (dayIndex, viewIndex) => {
                    return "list-item-" + dayIndex + "-" + viewIndex;
                };

                const copyURL = () => {
                    const geturl = window.location.toString();

                    // Use modern Clipboard API if available
                    if (navigator.clipboard && window.isSecureContext) {
                        navigator.clipboard.writeText(geturl)
                            .then(() => {
                                Swal.fire({
                                    icon: 'success',
                                    title: '已複製網址',
                                    timer: 1500,
                                    showConfirmButton: false
                                });
                            })
                            .catch(err => {
                                console.error('Failed to copy:', err);
                                Swal.fire('複製失敗', '請手動複製網址', 'error');
                            });
                    } else {
                        // Fallback for older browsers
                        let myurl = document.createElement('input');
                        document.body.appendChild(myurl);
                        myurl.value = geturl;
                        myurl.select();
                        try {
                            document.execCommand('copy');
                            Swal.fire({
                                icon: 'success',
                                title: '已複製網址',
                                timer: 1500,
                                showConfirmButton: false
                            });
                        } catch (err) {
                            console.error('Failed to copy:', err);
                            Swal.fire('複製失敗', '請手動複製網址', 'error');
                        }
                        document.body.removeChild(myurl);
                    }
                };

                const copyblog = () => {
                    // Validate date is selected
                    if (!copyDate.value) {
                        Swal.fire({
                            icon: 'warning',
                            title: '請選擇日期',
                            text: '請先選擇行程開始日期'
                        });
                        return;
                    }

                    let startDate = new Date(copyDate.value);
                    let today = new Date();
                    today.setHours(0, 0, 0, 0); // Reset time to compare only dates

                    if (startDate < today) {
                        Swal.fire({
                            icon: 'error',
                            title: '日期輸入錯誤',
                            text: '開始日期不能早於今天'
                        });
                        return;
                    }

                    axios.post("@Url.Action("copySchedule","Schedule")", { BlogId: blogId.value, startDate })
                        .then(() => {
                            Swal.fire({
                                icon: 'success',
                                title: '複製行程成功',
                                text: '已複製到您的行程列表'
                            });
                        })
                        .catch(err => {
                            Swal.fire({
                                icon: 'error',
                                title: '複製失敗',
                                text: '請稍後再試'
                            });
                        });
                };

                const likeblog = () => {
                    if (!bool.value) {
                        bool.value = true;
                        Like.value++;
                    } else {
                        bool.value = false;
                        Like.value--;
                    }
                    axios.post("@Url.Action("userKeepBlog","Blog")", { id: blogId.value }).then(() => {
                    }).catch(() => {
                        if (!bool.value) {
                            bool.value = true;
                            Like.value++;
                        } else {
                            bool.value = false;
                            Like.value--;
                        }
                    });
                };

                const onChange = (dayIndex) => {
                    for (let j = 0; j < Details.value.length; j++) {
                        let timestamp = Details.value[j].datetime || '09:00';
                        for (let i = 0; i < Details.value[j].length; i++) {
                            Details.value[j][i].starttime = timestamp;
                            let hr = timestamp.substring(0, 2);
                            let min = timestamp.substring(3, 5);
                            let addhr = parseInt((Number(min) + Number(Details.value[j][i].min)) / 60);

                            hr = Number(hr) + Number(addhr);
                            min = (Number(min) + Number(Details.value[j][i].min)) % 60;

                            if (hr < 10) {
                                hr = '0' + hr;
                            }
                            if (min < 10) {
                                min = '0' + min;
                            }

                            timestamp = hr + ':' + min;
                            Details.value[j][i].endtime = timestamp;
                        }
                    }
                };

                const blogUrl = (id) => {
                    window.location.href = "@Url.Action("Blog","Home")?" + id;
                };

                const caltime = (dayIndex) => {
                    for (let j = 0; j < Details.value.length; j++) {
                        let timestamp = Details.value[j].datetime || '09:00';
                        for (let i = 0; i < Details.value[j].length; i++) {
                            Details.value[j][i].starttime = timestamp;
                            let hr = timestamp.substring(0, 2);
                            let min = timestamp.substring(3, 5);
                            let addhr = parseInt((Number(min) + Number(Details.value[j][i].min)) / 60);

                            hr = Number(hr) + Number(addhr);
                            min = (Number(min) + Number(Details.value[j][i].min)) % 60;

                            if (hr < 10) {
                                hr = '0' + hr;
                            }
                            if (min < 10) {
                                min = '0' + min;
                            }

                            timestamp = hr + ':' + min;
                            Details.value[j][i].endtime = timestamp;
                        }
                    }
                };

                // Mounted lifecycle
                onMounted(() => {
                    let id = window.location.search.substring(1);
                    if (id != "") {
                        axios.post("@Url.Action("selectblogdetails","blog")", { BlogId: id })
                            .then(res => {
                                blogId.value = res.data.blogId;
                                CoverImageName.value = res.data.coverImage;
                                UserImage.value = res.data.userImage;
                                Details.value = res.data.details;
                                EndDate.value = res.data.endDate;
                                StartDate.value = res.data.startDate;
                                Title.value = res.data.title;
                                Describe.value = res.data.describe;
                                UserName.value = res.data.userName;
                                TagList.value = res.data.tagList;
                                Like.value = res.data.like;
                                isLoading.value = false;

                                axios.post("@Url.Action("getIsKeep","blog")", { id }).then(res => {
                                    bool.value = res.data;
                                });

                                axios.post("@Url.Action("searchBlog","blog")", { selectAcitivity: TagList.value }).then(res => {
                                    tagBlog.value = res.data;
                                });
                            })
                            .catch(err => {
                                console.error('Failed to load blog:', err);
                                isLoading.value = false;
                                Swal.fire("載入失敗", "無法載入遊記資料", "error");
                            });
                    } else {
                        isLoading.value = false;
                    }
                });

                // Return all reactive properties and methods
                return {
                    blogId, UserName, UserImage, CoverImageName, Title, Describe,
                    StartDate, EndDate, bool, Like, daterange, Details, TagList, tagBlog,
                    count, score, color, myscore, mytempscore,
                    copyDate, comTagBlog, isLoading,
                    TAG, getImages, userImageSrc, getdate, gettime, gethref, getanchor,
                    copyURL, copyblog, likeblog, onChange, blogUrl, caltime
                };
            }
        };

        // Create and mount the Vue 3 app
        Vue.createApp(BlogApp).mount('#bloginfo');

    </script>
    }


    <div id="bloginfo">
        <div class="d-flex@* flex-column align-items-center justify-content-center*@">
            <div id="robotcarousel" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#robotcarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#robotcarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#robotcarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>

                <div class="carousel-inner">
                    <div class="carousel-item" data-bs-interval="3000">
                        <img class="d-block w-100" style="height: 40vh;" src="https://i.picsum.photos/id/735/1800/1600.jpg?hmac=ORAvtQwonINqImN96j8kVd50jBUt6S0tTRjRKrLprNs" alt="img">
                    </div>
                    <div class="carousel-item active" data-bs-interval="3000">
                        <img class="d-block w-100" style="height: 40vh;" src="https://i.picsum.photos/id/212/1800/1600.jpg?hmac=yEt4Ncu_6soIUZ3CXYKbuxjk-PWC83V8Tw0I0odciFE" alt="img">
                    </div>
                    <div class="carousel-item" data-bs-interval="3000">
                        <img class="d-block w-100" style="height: 40vh;" src="https://i.picsum.photos/id/1067/1800/1600.jpg?hmac=9cyKyWn6g0_A3pa8x2EjrAz9KKkkEjsMUGE-gSagYFM" alt="img">
                    </div>
                </div>
            </div>
            <!-- Header End -->
            <!-- Loading state -->
            <div v-if="isLoading" style="text-align: center; padding: 100px;">
                <div style="font-size: 24px; color: #666;">載入遊記中...</div>
            </div>
            <!-- 右側欄位Detail Start -->
            <div v-else class="container py-3">
                <div class="row pt-5">
                    <div class="col-lg-4 mt-4 mt-lg-2 ">
                        <div class="sticky-top" style="top:10vh;z-index:0">
                            <!-- Author Bio -->
                            <div class="d-flex flex-column rounded py-4">
                                <div class="py-3">
                                    <span><img :src="userImageSrc(UserImage)" id="userimg" alt="Image"></span>
                                    <span class="px-3 py-1">{{UserName}}</span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="mb-2">Duration</div>
                                <div class="mb-2">{{getdate(StartDate)}}~{{getdate(EndDate)}}</div>
                                <ul class="list-group list-group-flush" id="hidden">
                                    <div v-for="(day,dayIndex) in Details" class="mt-2">
                                        <i class="fa-solid fa-calendar-days"
                                       style="color:var(--primary-bule-light)"></i>&nbsp;第{{dayIndex+1}}天

                                    <li v-for="(dayDetails,viewIndex) in day" :key="dayDetails.id" class="Details">
                                        <a class="list-group-item list-group-item-action"
                                       :href="gethref(dayIndex,viewIndex)">
                                            {{gettime(dayDetails.startTime)}}&nbsp; ▏
                                            {{dayDetails.p_Name}}
                                        </a>
                                    </li>

                            </div>
                            </ul>
                        </div>


                        <!-- Tag -->
                        <div  class="mt-2">
                            <div class="mb-4">
                                <h2 class="mb-2">#Tag</h2>
                                <div class="d-flex flex-wrap m-n1">
                                    <button v-for="(item) in TagList" class="btn btn-secondary m-1">{{TAG(item)}}</button>                                    
                                </div>
                            </div>
                        </div>

                        <!-- Tag Result -->
                        <div class="mb-4">
                            <div v-for="(item) in comTagBlog" class="d-flex align-items-center myshadow overflow-hidden" id="card" @@click="blogUrl(item.blogId)" type="button">                                 
                                <div class="box">
                                    <img class="cover-fit" :src="getImages(item.coverImage.name)" alt="Image">
                                </div>
                                <div>
                                    <div class="mx-1">{{item.title}}</div>
                                    <small class="mx-1"><i class="fa fa-user" style="color:var(--primary-bule-light);"></i> {{item.userName}}</small>
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
                    @*左側欄位*@
                <div class="col-lg-8">
                    <div class="d-flex flex-column text-left mb-3">
                        <div>
                            <div class="my-3" style="font-size:2.8rem;">{{Title}}</div>
                            <div class="d-flex">
                                <button class="btn btn-primary m-1" @@click="copyURL">SHARE </button>
                                <div class="dropdown me-2" id="setting">
                                    <button class="btn btn-primary dropdown-toggle m-1" type="button"
                                        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        收藏行程
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li>
                                            <input placeholder="選擇開始日期" type="text" onfocus="(this.type='date')"
                                               onblur="(this.type='text')" @@input="copyblog()" v-model="daterange" class="timepicker">
                                        </li>
                                    </ul>
                                </div>
                                <div style="line-height:37px;font-size:18px;">
                                    <i :class="bool?'fa fa-heart red':'fa fa-heart'" @@click="likeblog"></i>
                                    <span class="px-1"> {{Like}}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <img class="img-fluid rounded w-100 mb-4" :src="getImages(CoverImageName.name)" style="height:500px;object-fit:cover;" alt="Image" />
                        <div class="myshadow mb-4">
                            <div style="background-color:#ebebf5;border-radius:10px;text-indent: 3.6rem;padding:10px">{{Describe}}</div>
                        </div>
                        <div class="">
                            <div v-for="(day,dayIndex) in Details" class="myshadow">
                                <label id="day" class="my-3 ">第{{dayIndex+1}}天</label>
                                <div class="viewcolor">
                                    <div v-for="(dayDetails,viewIndex) in day" :key="dayDetails.id" class="mb-5 ">
                                        <div class="mb-1" :id=getanchor(dayIndex,viewIndex)><div style="font-weight: bold;font-size:2.5rem;">{{dayDetails.p_Name}}</div></div>
                                        <div class="mb-1">
                                            <i class="fa-solid fa-house-crack"
                                           style="color:var(--primary-bule-light)"></i>&nbsp;{{dayDetails.p_Add}}
                                        </div>
                                        <div class="mb-1">
                                            <i class="fa-solid fa-phone"
                                           style="color:var(--primary-bule-light)"></i>&nbsp;{{dayDetails.p_tel}}
                                        </div>
                                        <div>
                                            評分&nbsp;
                                            <i class="fa fa-star" :style="{color:color}"
                                           :class="item<=dayDetails.score?'fa-star':'fa-star-o'" v-for="item in count"
                                           @@load="myscore=item"></i>
                                        </div>

                                        <div v-viewer class="groupimg img-fluid">
                                            <template v-for="(image,index) in dayDetails.images">
                                                <img :src="getImages(image.name)">
                                            </template>
                                        </div>
                                        <div style="text-indent: 3.6rem;">{{dayDetails.describe}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Comments section - placeholder for future implementation -->
                        <div class="myshadow">
                            <div style="font-size:2.8rem;">留言</div>
                            <div style="padding: 20px; text-align: center; color: #666;">
                                <i class="fa fa-comments" style="font-size: 48px; color: #ddd; margin-bottom: 10px;"></i>
                                <p>留言功能開發中，敬請期待！</p>
                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
