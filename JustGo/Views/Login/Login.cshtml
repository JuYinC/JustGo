@{
    Layout = "_Layout2";
}
@{
    ViewData["Title"] = "登入";
}

@using JustGo.ViewModels;
@model UserVM;

<style>
    .LoginStyle {
        font-weight: bold;
        box-shadow: 0 0 10px;
        opacity: 0.7;
        border-radius: 18px;
        cursor: grab;
        border: 7px solid #FFFAF0;
        padding: 30px;
        background-color: #C4E1FF;
    }

    .row {
        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        align-content: flex-start;
    }

    .LoginTitle_Style {
        margin-top: 60PX;
        opacity: 0.7;
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>

<div class="Login_Background_Color">
    <div class="LoginTitle_Style">
        <div class="container">
            <div class="row">
                <div class="col-md-4 ">
                    <ul class="nav nav-pills mb-2" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">登入</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">註冊</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-content" id="pills-tabContent">
        <!-- Login Tab -->
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="LoginStyle">
                                <h2>登入</h2>
                                <hr class="mb-4 mt-4 ms-2 me-2" />
                                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input asp-for="Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <label asp-for="Email" class="form-label"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input asp-for="Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" type="password" />
                                    <label asp-for="Password" class="form-label"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div>
                                    <div class="checkbox mb-2 mt-2 ms-2 me-2">
                                        <label asp-for="RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                    <hr class="mb-4 mt-4 ms-2 me-2" />
                                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg btn-block mt-2 ms-2 me-2">登入</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Registration Tab -->
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            <form asp-action="Register" asp-controller="Login" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="LoginStyle">
                                <h2>註冊</h2>
                                <hr class="mb-4 mt-4 ms-2 me-2" />
                                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input name="Name" class="form-control form-control-lg" aria-required="true" placeholder="輸入名稱" />
                                    <label class="form-label">姓名</label>
                                </div>

                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input name="Email" type="email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="信箱" />
                                    <label class="form-label">信箱</label>
                                </div>

                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input name="City" class="form-control form-control-lg" placeholder="城市 (選填)" />
                                    <label class="form-label">城市</label>
                                </div>

                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input name="Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" type="password" placeholder="密碼 (至少6個字元)" />
                                    <label class="form-label">密碼</label>
                                </div>

                                <div class="form-outline mb-2 mt-2 ms-2 me-2">
                                    <input name="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" type="password" placeholder="確認密碼" />
                                    <label class="form-label">確認密碼</label>
                                </div>

                                <hr class="mb-4 mt-4 ms-2 me-2" />
                                <button type="submit" class="btn btn-primary btn-lg btn-block mt-2 ms-2 me-2">註冊</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
