    <script>

            let chatbtn1 = document.getElementById("chatbtn");
            let y = 0;

            // Only add listener if element exists
            if (chatbtn1) {
                chatbtn1.addEventListener("click", function(){
                    const chatEl = document.getElementById("chat");
                    if (!chatEl) return;

                    if(y==0){
                        chatEl.style.right = '0';
                        y = y+1;
                    }else{
                        chatEl.style.right = '-520px';
                        y = y-1;
                    }
                });
            }

            const forop = document.getElementById("forop");
            if (forop) {
                forop.addEventListener("click", function(){
                    const opEl = document.getElementById("op");
                    const outbtnEl = document.getElementById('outbtn');

                    if (!opEl) return;

                    if (opEl.style.height=='0px'){
                        opEl.style.height = "50px";
                        if (outbtnEl) {
                            setTimeout(() => {
                                outbtnEl.style.display='';
                            }, 100);
                        }
                    }else{
                        opEl.style.height="0px";
                        if (outbtnEl) {
                            setTimeout(() => {
                                outbtnEl.style.display='none';
                            }, 100);
                        }
                    }
                });
            }
    </script>
